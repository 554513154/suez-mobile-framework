<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/suez_list"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_lot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:singleLine="false"
                android:text="@string/column_prodlot_id"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_source_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:singleLine="false"
                android:text="@string/column_location_id"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_blending_qty_available"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center"
                android:singleLine="false"
                android:textSize="14sp"
                android:text="@string/label_available_qty" />

            <TextView
                android:id="@+id/txt_blending_qty"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center"
                android:singleLine="false"
                android:textSize="14sp"
                android:text="@string/column_qty" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/ViewSeparator" />

</LinearLayout>